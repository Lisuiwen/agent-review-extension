{
  "name": "agentreview",
  "displayName": "AgentReview",
  "description": "代码审查插件，支持规则检查和AI审查，在commit时强制执行",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentreview.run",
        "title": "执行代码审查",
        "icon": "$(play)"
      },
      {
        "command": "agentreview.runStaged",
        "title": "仅暂存变更审查"
      },
      {
        "command": "agentreview.review",
        "title": "AgentReview: 执行代码审查"
      },
      {
        "command": "agentreview.showReport",
        "title": "AgentReview: 显示审查报告"
      },
      {
        "command": "agentreview.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "agentreview.fixIssue",
        "title": "AgentReview: 修复当前问题"
      },
      {
        "command": "agentreview.allowIssueIgnore",
        "title": "AgentReview: 放行当前问题（插入@ai-ignore注释）"
      },
      {
        "command": "agentreview.reviewCurrentFileNow",
        "title": "AgentReview: 立即复审当前文件"
      },
      {
        "command": "agentreview.runtimeLog.explainLatest",
        "title": "AgentReview: 解释最新运行日志"
      }
    ],
    "views": {
      "agentReview": [
        {
          "id": "agentReview.results",
          "name": "审查结果",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "agentreview.refresh",
          "when": "view == agentReview.results",
          "group": "navigation"
        }
      ],
      "view/item": [
        {
          "command": "agentreview.allowIssueIgnore",
          "when": "view == agentReview.results && viewItem == reviewIssue",
          "group": "inline@1"
        },
        {
          "command": "agentreview.fixIssue",
          "when": "view == agentReview.results && viewItem == reviewIssue",
          "group": "inline@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentReview",
          "title": "AgentReview",
          "icon": "$(checklist)"
        }
      ]
    },
    "configuration": {
      "title": "AgentReview",
      "properties": {
        "agentreview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用AgentReview插件"
        },
        "agentreview.configPath": {
          "type": "string",
          "default": ".agentreview.yaml",
          "description": "配置文件路径"
        },
        "agentreview.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "严格模式：所有问题都阻止提交"
        },
        "agentreview.ai.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启用AI审查功能"
        },
        "agentreview.ai.apiFormat": {
          "type": "string",
          "enum": [
            "openai",
            "custom"
          ],
          "default": "openai",
          "description": "AI API格式：openai（OpenAI兼容格式）或 custom（自定义格式）"
        },
        "agentreview.ai.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "AI API 端点 URL。在「用户」设置中配置后对所有工作区生效，无需在每个项目里放 .env。支持环境变量占位符，如 ${AGENTREVIEW_AI_API_ENDPOINT}"
        },
        "agentreview.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI API 密钥。在「用户」设置中配置后对所有工作区生效。支持环境变量占位符，如 ${AGENTREVIEW_AI_API_KEY}"
        },
        "agentreview.ai.model": {
          "type": "string",
          "default": "",
          "description": "模型名称（如 kimi-k2-turbo-preview）。在「用户」设置中配置后对所有工作区生效，未配置时可由 .env 的 AGENTREVIEW_AI_MODEL 提供"
        },
        "agentreview.ai.timeout": {
          "type": "number",
          "default": 30000,
          "description": "API请求超时时间（毫秒）"
        },
        "agentreview.ai.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "温度参数（0-2），控制输出的随机性"
        },
        "agentreview.ai.maxTokens": {
          "type": "number",
          "default": 2000,
          "description": "最大token数"
        },
        "agentreview.ai.systemPrompt": {
          "type": "string",
          "default": "你是一个专业的代码审查助手。请审查代码并指出潜在问题、风险和改进建议。",
          "description": "系统提示词，用于指导AI审查行为"
        },
        "agentreview.ai.retryCount": {
          "type": "number",
          "default": 3,
          "description": "API请求失败时的重试次数"
        },
        "agentreview.ai.retryDelay": {
          "type": "number",
          "default": 1000,
          "description": "重试延迟时间（毫秒）"
        },
        "agentreview.ai.action": {
          "type": "string",
          "enum": [
            "block_commit",
            "warning",
            "log"
          ],
          "default": "warning",
          "description": "AI审查发现问题时的行为：block_commit（阻止提交）、warning（警告但允许）、log（仅记录）"
        },
        "agentreview.ai.batchingMode": {
          "type": "string",
          "enum": [
            "file_count",
            "ast_snippet"
          ],
          "default": "file_count",
          "description": "AI 批次模式：按文件数量或按 AST 片段数量分批"
        },
        "agentreview.ai.astSnippetBudget": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "AST 片段分批模式下每批允许的片段总数上限"
        },
        "agentreview.ai.astChunkStrategy": {
          "type": "string",
          "enum": [
            "even",
            "contiguous"
          ],
          "default": "even",
          "description": "同一文件 AST 片段拆分策略：even（均匀）或 contiguous（连续）"
        },
        "agentreview.ai.batchConcurrency": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "description": "AI 批次并发请求数"
        },
        "agentreview.ai.maxRequestChars": {
          "type": "number",
          "default": 50000,
          "minimum": 1000,
          "description": "单次请求字符数上限，超限时自动二分降载"
        },
        "agentreview.ai.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "保存文件时自动触发审查（异步非阻塞）"
        },
        "agentreview.ai.runOnSaveDebounceMs": {
          "type": "number",
          "default": 800,
          "minimum": 0,
          "description": "保存复审防抖时间（毫秒）"
        },
        "agentreview.ai.runOnSaveMaxRunsPerMinute": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "description": "每分钟最多触发保存复审次数（限频）"
        },
        "agentreview.ai.enableLocalRebase": {
          "type": "boolean",
          "default": true,
          "description": "编辑时本地同步 issue 行号并标记待复审"
        },
        "agentreview.ai.largeChangeLineThreshold": {
          "type": "number",
          "default": 40,
          "minimum": 1,
          "description": "大改动阈值（超过后仅标记待复审，不做行号重映射）"
        },
        "agentreview.ai.idleRecheckEnabled": {
          "type": "boolean",
          "default": false,
          "description": "启用编辑停顿后自动复审当前文件"
        },
        "agentreview.ai.idleRecheckMs": {
          "type": "number",
          "default": 2500,
          "minimum": 300,
          "description": "编辑停顿触发复审间隔（毫秒）"
        },
        "agentreview.ai.autoReviewMaxParallelFiles": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 2,
          "description": "保存复审并行文件数"
        },
        "agentreview.ai.reviewCurrentFileNowBypassRateLimit": {
          "type": "boolean",
          "default": false,
          "description": "立即复审当前文件时是否绕过限频"
        },
        "agentreview.ai.funnelLint": {
          "type": "boolean",
          "default": false,
          "description": "漏斗式检测：存在高优先级 diagnostics 时跳过对应文件的 AI 审查"
        },
        "agentreview.ai.funnelLintSeverity": {
          "type": "string",
          "enum": [
            "error",
            "warning"
          ],
          "default": "error",
          "description": "漏斗阈值：error=仅错误拦截，warning=警告及以上拦截"
        },
        "agentreview.ai.ignoreFormatOnlyDiff": {
          "type": "boolean",
          "default": true,
          "description": "忽略仅格式/空白变更的 diff，减少无效 AI 调用"
        },
        "agentreview.runtimeLog.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用运行链路日志落盘（JSONL）"
        },
        "agentreview.runtimeLog.level": {
          "type": "string",
          "enum": [
            "info",
            "warn",
            "error",
            "debug"
          ],
          "default": "info",
          "description": "运行链路日志级别过滤"
        },
        "agentreview.runtimeLog.retentionDays": {
          "type": "number",
          "minimum": 1,
          "default": 14,
          "description": "运行链路日志保留天数"
        },
        "agentreview.runtimeLog.fileMode": {
          "type": "string",
          "enum": [
            "per_run"
          ],
          "default": "per_run",
          "description": "运行链路日志切分模式（每次运行一个文件）"
        },
        "agentreview.runtimeLog.format": {
          "type": "string",
          "enum": [
            "jsonl"
          ],
          "default": "jsonl",
          "description": "运行链路日志文件格式"
        },
        "agentreview.runtimeLog.baseDirMode": {
          "type": "string",
          "enum": [
            "workspace_docs_logs",
            "global_storage"
          ],
          "default": "workspace_docs_logs",
          "description": "运行链路日志基础目录策略：workspace_docs_logs=项目 docs/logs，global_storage=VSCode 全局存储"
        },
        "agentreview.runtimeLog.humanReadable.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用运行日志可读摘要能力"
        },
        "agentreview.runtimeLog.humanReadable.granularity": {
          "type": "string",
          "enum": [
            "stage_summary",
            "events",
            "summary_with_key_events"
          ],
          "default": "summary_with_key_events",
          "description": "可读摘要粒度：阶段摘要/事件逐条/摘要+关键事件"
        },
        "agentreview.runtimeLog.humanReadable.autoGenerateOnRunEnd": {
          "type": "boolean",
          "default": false,
          "description": "每次运行结束后自动生成可读摘要文件"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.19.30",
    "@types/vscode": "^1.80.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@vue/compiler-sfc": "^3.4.0",
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.1.1",
    "zod": "^4.3.6"
  }
}
