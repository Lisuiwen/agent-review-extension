{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "npm run compile",
      "options": { "shell": { "executable": "cmd.exe", "args": ["/d", "/c"] } },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": "$tsc",
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": { "reveal": "silent" }
    }
  ]
}
